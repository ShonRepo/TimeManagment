<Window x:Class="TimeManagment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagment"
        mc:Ignorable="d"
        Title="Учет рабочего времени" Background="#FF0097FF" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid  Background="#FF075FB8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Source="Clock-PNG-Picture.png"/>
            <Label HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" FontSize="20" FontWeight="Bold">Учет рабочего времени</Label>

        </Grid>
        <Frame Grid.Row="1" x:Name="MainFramew" NavigationUIVisibility="Hidden" Source="/TimeManagment;component/authorization.xaml"/>
    </Grid>
</Window>
